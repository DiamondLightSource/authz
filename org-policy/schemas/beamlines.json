{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Beamlines",
    "description": "A mapping of beamlines to their various attributes",
    "type": "object",
    "additionalProperties": {
      "$ref": "#/definitions/Beamline"
    },
    "definitions": {
      "Beamline": {
        "description": "The various attributes of a beamline",
        "type": "object",
        "required": [
          "sessions"
        ],
        "properties": {
          "sessions": {
            "description": "The sessions which occured on this beamline",
            "type": "array",
            "items": {
              "type": "integer",
              "format": "uint32",
              "minimum": 0.0
            }
          }
        }
      }
    }
  }
  